{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"target": "es6",
		"outDir": "dist",
		"lib": ["es6"],
		"sourceMap": true,
		"rootDir": "./src",
		"strict": true,
		"declaration": true,
		"declarationMap": true,
		"experimentalDecorators": true,
		"skipLibCheck": true
	},
	"include": ["./src/**/*"]
}
